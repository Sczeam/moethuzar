# Used by runtime app queries (pooler URL is fine)
DATABASE_URL="postgresql://postgres.[PROJECT_REF]:[PASSWORD]@[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"

# Used by Prisma migrations (direct DB URL recommended)
DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres"

# Supabase SSR/Auth (official Next.js SSR pattern)
NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT_REF].supabase.co"
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY="[SUPABASE_PUBLISHABLE_OR_ANON_KEY]"

# Optional: seed admin mapping to an existing Supabase Auth user UUID
ADMIN_AUTH_USER_ID="11111111-1111-1111-1111-111111111111"

# Optional: used in README admin bootstrap examples
ADMIN_EMAIL="admin@yourdomain.com"

# Cloudflare R2 (product image upload)
R2_ACCOUNT_ID="[CLOUDFLARE_ACCOUNT_ID]"
R2_ACCESS_KEY_ID="[R2_ACCESS_KEY_ID]"
R2_SECRET_ACCESS_KEY="[R2_SECRET_ACCESS_KEY]"
R2_BUCKET="[R2_BUCKET_NAME]"
# Public base URL for your bucket/custom domain. Example:
# https://pub-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx.r2.dev
R2_PUBLIC_BASE_URL="https://[YOUR_PUBLIC_R2_BASE_URL]"
